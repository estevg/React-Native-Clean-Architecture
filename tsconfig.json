{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@appBank/*": ["./src/*"],
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["./src/components/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "extends": "@tsconfig/react-native/tsconfig.json"
}
